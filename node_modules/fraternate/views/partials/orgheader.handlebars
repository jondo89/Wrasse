<script type="text/javascript" src="//d3js.org/d3.v3.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js"></script>
<link rel="stylesheet" href="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css" />

<div class="row" style="padding-top: 25px" >
  <div class="col-md-10">
    <div class="media">

      <pre>{{organization.entry.displayname}}</pre>
      {{#if organization.entry.picture}}
      <div class="media-left media-middle mr-4">
        <a href="#">
          <a href="/organizations/{{organization.entry.name}}">
            <img onerror="this.src='https://www.gravatar.com/avatar/?s=198&d=retro&r=G'"" src="{{organization.entry.picture}}" class="media-object" style="max-width: 200px;border-radius: 5px;border: 1px;border-color: #d8d8d8;border-style: solid;">
          </a>
        </a>
      </div>
      {{else}}
      <div class="media-left media-middle mr-4">
        <a href="#">
          <a href="/organizations/{{organization.entry.name}}">
            <img src="https://www.gravatar.com/avatar/?s=198&d=retro&r=G" class="media-object" style="max-width: 200px;border-radius: 5px;border: 1px;border-color: #d8d8d8;border-style: solid;">
          </a>
        </a>
      </div>
      {{/if}}
      <div class="media-body">
        <h1>{{organization.entry.displayname}}  <small>{{dotdotdot organization.entry.name}}</small></h1>
        <p>{{dotdotdotdotdot organization.entry.description }}</p>
        {{#if organization.entry.company}}
        <span style="color: grey;padding-right: 25px">
          <i class="fa fa-users" aria-hidden="true"></i>  {{dotdotdot organization.entry.company}} 
        </span >
        {{/if}}
        {{#if organization.entry.location}}
        <span style="color: grey;padding-right: 25px">
          <i class="fa fa-map-marker" aria-hidden="true"></i>   {{dotdotdot organization.entry.location }} 
        </span>
        {{/if}}
        {{#if organization.entry.displayemail}}
        <span style="color: grey;padding-right: 25px">
          <i class="fa fa-envelope" aria-hidden="true"></i>   <a style="color: grey" href="mailto:{{organization.entry.email}}">{{dotdotdotdot organization.entry.displayemail}}</a>
          </span>
          {{/if}}
          {{#if organization.entry.url}}
          <span style="color: grey;padding-right: 25px">   
            <i class="fa fa-link" aria-hidden="true"></i>   <a style="color: grey" href="http://{{organization.entry.url}}" target="_blank">{{dotdotdotdot organization.entry.url}}</a>  
          </span>
          {{/if}}
          <br>
          <br>
                      <span style="color: grey;padding-right: 25px">   
            <i class="fa fa-plus" aria-hidden="true"></i>   <a style="color: grey" href="" target="_blank">{{organization.createdAt}}</a>  
          </span>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      {{#if user}}
      <div style="text-align: right;">
       {{> button-org-user }}
     </div>
     {{/if}}
   </div>
 </div>
<p></p>